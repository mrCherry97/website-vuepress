
.custom-sidebar {
  overflow: auto;
  max-height: calc(100vh - 100px);
  background: white;
  width: 240px;
  position: sticky;
  top: 0px;
}

@media (max-width: 1270px) {
  .custom-sidebar {
    position: fixed;
    left: -300px;
    top:0px;
    max-height: 100%;
    height: 100%;
    z-index: 100;
    transition: all 350ms cubic-bezier(0.4, 0, 0.2, 1) 0s;
    width: 300px;

  }
}